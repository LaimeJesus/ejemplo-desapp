<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
      "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
        
<hibernate-mapping default-access="field" default-cascade="save-update">    
    <class name="model.products.PurchaseRecord">
        <id name="id" type="java.lang.Integer" column="purchase_record_id">
            <generator class="increment" />
        </id>

 		<property name="purchasingDate" type="org.joda.time.contrib.hibernate.PersistentDateTime"/>
		<bag name="productList" cascade="all" lazy="false" inverse="false">
			<key column="product_list_id"/>
			<one-to-many class="model.products.ProductList"/>
		</bag>        
	</class>
</hibernate-mapping>