<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
      "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
        
<hibernate-mapping default-access="field" default-cascade="save-update">    
    <class name="model.registers.PurchaseRecord">
        <id name="id" type="java.lang.Integer" column="purchase_record_id">
            <generator class="increment" />
        </id>
 		<!-- <property name="purchasingDate" type="org.joda.time.contrib.hibernate.PersistentDateTime"/> -->
		<one-to-one name="purchasingList" class="model.products.ProductList" cascade="persist"></one-to-one>
	</class>
</hibernate-mapping>