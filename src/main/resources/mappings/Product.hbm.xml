<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
      "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
        
<Hibernate-mapping default-access="field" default-cascade="save-update">
    
    <class name="model.products.Product">
        
        
        <id name="id" type="integer" column="products_id">
            <generator class="auto" />
        </id>
        
        <property name="name" type="java.lang.String" column="products_name" />
        <property name="brand" type="java.lang.String" column="products_brand" />
        <property name="stock" type="java.lang.Integer" column="products_stock" />
        
		<property name="moneyValue" type="java.lang.String" column="products_price" />
		  
        <property name="category" column="products_category">
		  <type name="org.hibernate.type.EnumType">
		    <param name="enumClass">util.Category</param>
		  </type>       
		</property>
		
        <property name="processingTime" type="org.joda.time.contrib.hibernate.PersistentDuration" column="products_processing_time" />
        <property name="imageUrl" type="java.lang.String" column="products_image_url" />
        
        
        
    </class>
    
</Hibernate-mapping>