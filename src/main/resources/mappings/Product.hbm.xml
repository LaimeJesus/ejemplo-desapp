<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
      "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
        
<hibernate-mapping default-access="field" default-cascade="save-update">
    
    <class name="model.products.Product">
        
        
        <id 
	        name="id" 
	        type="java.lang.Integer" 
	        column="product_id">
            <generator class="increment" />
        </id>
        
        <property 
        	name="name" 
        	type="java.lang.String" 
        	column="product_name"
        	not-null="false" />
        <property 
	        name="brand" 
	        type="java.lang.String" 
	        column="product_brand"
	        not-null="false" />
        <property 
	        name="stock" 
	        type="java.lang.Integer" 
	        column="product_stock"
	        not-null="false" />
        
		<many-to-one 
			name="price" 
			class="util.Money"
			cascade="all"
			lazy="false">
		</many-to-one>
		  
        <property 
        	name="category" 
        	column="product_category"
        	not-null="false" >
		  	<type name="org.hibernate.type.EnumType">
				<param name="enumClass">util.Category</param>
			</type>
			       
		</property>
		
        <property 
	        name="processingTime" 
	        type="org.jadira.usertype.dateandtime.joda.PersistentDurationAsMillisLong" 
	        column="products_processing_time" 
	        not-null="false"
	        lazy="false" />
	        
        <property 
	        name="imageUrl" 
	        type="java.lang.String" 
	        column="product_image_url"
	        not-null="false"/>
    </class>
    
</hibernate-mapping>