<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
      "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
        
<hibernate-mapping default-access="field" default-cascade="save-update">    
    <class name="model.users.User">
        <id name="id" type="java.lang.Integer" column="user_id">
            <generator class="increment" />
        </id>
        
        <property 
        	name="username" 
        	type="java.lang.String" 
        	column="user_username" 
        	 />
        	
        <property 
        	name="email" 
        	type="java.lang.String" 
        	column="user_email" />
        
		<one-to-one 
			name="profile" 
			class="model.users.Profile" 
			cascade="all">
		</one-to-one>
		
		<one-to-one 
			name="password" 
			class="util.Password" >
		</one-to-one>
		
		<property 
			name="isLogged" 
			type="java.lang.Boolean" 
			column="user_isLogged" 
			not-null="true"/>		
    
    	<property 
        	name="userPermission" 
        	column="user_permission"
        	not-null="false" >
		  	<type name="org.hibernate.type.EnumType">
				<param name="enumClass">util.Permission</param>
			</type>
			       
		</property>
    	
    </class>
</hibernate-mapping>